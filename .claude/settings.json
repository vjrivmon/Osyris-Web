{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/session-init.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/pre-tool-validate.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/post-tool-format.sh",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'if [[ \"$CLAUDE_TOOL_INPUT\" == *\"git commit\"* ]]; then mkdir -p .claude/checkpoints; echo \"{\\\"timestamp\\\": \\\"$(date -Iseconds)\\\", \\\"commit\\\": \\\"$(git rev-parse --short HEAD 2>/dev/null || echo none)\\\"}\" > .claude/checkpoints/$(date +%Y%m%d-%H%M%S).json; fi'",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/ralph-hook.sh",
            "timeout": 300
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(git:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(touch:*)",
      "Bash(rm:*)",
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(curl:*)",
      "Bash(ssh:*)",
      "Bash(scp:*)",
      "Bash(tar:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(awk:*)",
      "Bash(tree:*)",
      "Bash(psql:*)",
      "Bash(gh:*)",
      "Bash(./scripts/*:*)",
      "Bash(./.claude/scripts/*:*)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task",
      "mcp__github__*",
      "mcp__memory__*",
      "mcp__filesystem__*",
      "mcp__playwright__*",
      "mcp__puppeteer__*"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo rm -rf /)",
      "Bash(> /dev/sda)",
      "Bash(dd if=/dev/)",
      "Bash(chmod 777 /)",
      "Bash(git push --force origin main)",
      "Bash(git push -f origin main)",
      "Bash(git push --force origin master)",
      "Bash(git push -f origin master)"
    ]
  }
}
